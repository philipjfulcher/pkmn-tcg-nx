{
  "$schema": "http://json-schema.org/schema",
  "id": "feature-library",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Library name",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "scope": {
      "type": "string",
      "enum": ["shared", "core", "cards", "decks"],
      "description": "Library scope"
    },
    "type": {
      "type": "string",
      "enum": ["feature", "ui", "data-access", "util", "model"],
      "description": "Library scope"
    }
  },
  "required": ["name", "scope"]
}
